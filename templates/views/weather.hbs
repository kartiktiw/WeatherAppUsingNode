<!DOCTYPE html>
<html lang="en">
<head>
   {{>headers}}
</head>
<body>
{{>navbar}}
   <!-- Main Header -->
   <div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
        <div class="main_content">
            <form class="temp_form">
                <input type="text" id="cityName" placeholder="Enter Your City Name.." autocomplete="off">
                <br>
                <input type="submit" value="search" id ="submitBtn">
                <p id="temp_err"></p>
            </form>
    

        <div class="tempInformation">
            <div class="top_layer">
                <p id="day">Saturday</p>
                <p id ="today_date">17 June</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get Output here</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
            </div>
            </div>
        </div>
    </div>
   </div>
   </div>
   <script src="js/main.js"></script>

   <script>
     
     const getCurrentDay = ()=>{
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wednesday";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        let days= weekday[currentTime.getDay()];
        const day=document.getElementById('day');
        day.innerText=days;
        return days;
    
      };

      const getCurrentMonth = ()=>{
        var month = new Array(12);
        month[0] = "JAN";
        month[1] = "FEB";
        month[2] = "MAR";
        month[3] = "APR";
        month[4] = "MAY";
        month[5] = "JUNE";
        month[6] = "JULY";
        month[7] = "AUG";
        month[8] = "SEPT";
        month[9] = "OCT";
        month[10] = "NOV";
        month[11] = "DEC";

        let currentTime = new Date();
        let months= month[currentTime.getMonth()];
        let dates=currentTime.getDate();
        const date=document.getElementById('today_date');
        date.innerText=months;
        return months;
    
      };
  
      getCurrentDay();  
      getCurrentMonth(); 

   </script>

   <!-- footer code  -->
   {{>footer}}
   
</body>
</html>